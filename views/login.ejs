<body class="signup-background-color">
  <% include partials/header %>
    <div class="container-fluid">
      <div class="well signup-well-margin col-md-offset-3 col-md-6 col-md-12">

        <ul>
          <p class="text-center signup-form-text-size">
            <strong>Login!</strong>
          </p>
          <!-- show any messages that come back with authentication -->
          <% if (message.length > 0) { %>
            <div class="alert alert-danger">
              <%= message %>
            </div>
            <% } %>
              <form class="center-block" action="/login" method="post">

                <div class="form-group">
                    <label>E-mail</label>
                    <input type="text" class="form-control" name="email" placeholder="E-mail" required>
                  </div>
                  <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password" placeholder="Password" required>
                  </div>
                  <div class="form-group">
                    <label>Remember Me</label>
                    <input type="checkbox" class="form-control" name="rememberme" value="yes">
                  </div> 

                <button class="cetner-block signup-button btn btn-warning btn-sm" type="submit">Login</button>
              </form>
              <hr>

              <p>Need an account?
                <a href="/signup">Signup</a>
              </p>
              <p>Or go
                <a href="/">home</a>.</p>
        </ul>
      </div>
    </div>
    <% include partials/footer %>
</body>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="js/header.js"></script>
</html>